# =============================================================================
# VoxNexus Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit your .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Core Application
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://voxnexus:voxnexus_dev@localhost:5432/voxnexus?schema=public
POSTGRES_USER=voxnexus
POSTGRES_PASSWORD=voxnexus_dev
POSTGRES_DB=voxnexus

# -----------------------------------------------------------------------------
# Redis (Caching & Pub/Sub)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# LiveKit (Real-time Communication)
# -----------------------------------------------------------------------------
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# -----------------------------------------------------------------------------
# LLM Providers (Pick one or more)
# -----------------------------------------------------------------------------
# Default LLM provider: openai | anthropic | ollama | aiapi | custom
LLM_PROVIDER=aiapi

# AI API Gateway (Recommended - routes to multiple providers)
# Supports: sonnet, opus, haiku (Claude), codex (OpenAI), gemini, kimi
AI_API_URL=http://localhost:7200
AI_API_KEY=sk-aiapi-your-key-here
AI_API_MODEL=sonnet

# OpenAI (Direct - fallback)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Ollama (Self-hosted)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# -----------------------------------------------------------------------------
# Speech-to-Text (STT) Providers
# -----------------------------------------------------------------------------
# Default STT provider: deepgram | whisper | assemblyai | custom
STT_PROVIDER=deepgram

# Deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key

# AssemblyAI
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Whisper (OpenAI)
# Uses OPENAI_API_KEY from above

# -----------------------------------------------------------------------------
# Text-to-Speech (TTS) Providers
# -----------------------------------------------------------------------------
# Default TTS provider: cartesia | elevenlabs | openai | kokoro | custom
TTS_PROVIDER=cartesia

# Cartesia
CARTESIA_API_KEY=your_cartesia_api_key
CARTESIA_VOICE_ID=default

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=default

# OpenAI TTS
# Uses OPENAI_API_KEY from above
OPENAI_TTS_VOICE=alloy

# Kokoro (Local TTS - Cost-effective)
# Requires running the Kokoro TTS microservice
TTS_URL=http://localhost:8880
KOKORO_VOICE=af_bella

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRY=7d
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Web Dashboard (Next.js)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# -----------------------------------------------------------------------------
# Worker Service (Python)
# -----------------------------------------------------------------------------
WORKER_HOST=0.0.0.0
WORKER_PORT=8080
WORKER_HEALTH_PORT=8081

# -----------------------------------------------------------------------------
# Webhook Configuration
# -----------------------------------------------------------------------------
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_RETRY_COUNT=3
WEBHOOK_SECRET=your-webhook-signing-secret

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_TELEMETRY=false
ENABLE_DEBUG_MODE=false
ENABLE_RATE_LIMITING=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000
